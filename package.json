{
  "name": "yo",
  "description": "一个专注于移动开发的前端框架",
  "compiler": "node-sass",
  "dependencies": {
    "gulp": "3.9.0",
    "gulp-connect": "^4.0.0",
    "gulp-plumber": "1.0.1",
    "gulp-ruby-sass": "^2.0.6",
    "gulp-sass-china": "2.3.1",
    "gulp-util": "3.0.6",
    "node-notifier": "4.2.3",
    "node-sass-china": "3.7.0",
    "optimist": "^0.6.1",
    "through2": "2.0.0",
    "node-sass-import-once": "^1.2.0"
  },
  "repository": "https://github.com/doyoe/Yo",
  "license": "MIT",
  "devDependencies": {
    "ghooks": "^2.0.0",
    "validate-commit-msg": "^2.12.2"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "test",
        "chore",
        "refactor",
        "opti"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "请输入message信息!",
      "helpMessage": "Commit message 格式错误, \n请查看规范: http://wiki.corp.qunar.com/pages/viewpage.action?pageId=159698767"
    }
  }
}